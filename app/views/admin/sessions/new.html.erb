<section id="session_wrapper">
  <% if flash[:error] %>
      <div class="flash_error"><%= flash[:error] %></div>
  <% end %>
  <div id="login_wrapper">
    <h1>Login to Admin</h1>
    <%= form_for(@user, url: admin_sessions_path) do |f| %>
      <div class="form_section">
        <%= f.label :email, :Email %><%= f.text_field :email, :required => true, :autofocus => true %><br />
        <%= f.label :password, :Password %><%= f.password_field :password, :required => true %>
      </div>
      <div class="form_section">
        <%= f.submit "Log In" %>
      </div>
    <% end %>
  </div>
</section>