<% url = @article.persisted? ? admin_article_path(@article) : admin_articles_path %>
<% method = @article.persisted? ? :put : :post %>
<div id="article_form_wrapper">
  <%= form_for @article, :url => url, :method => method do |f| %>
      <div class="form-section">
        <%= f.label :title, 'Title' %><%= f.text_field :title %>
      </div>
      <div class="form-section">
        <%= f.label :content, 'Content' %><%= f.text_area :content %><br />
      </div>
      <div class="form-section">
        <%= f.submit "Save" %>
      </div>
  <% end %>
</div>